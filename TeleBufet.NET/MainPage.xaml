<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeleBufet.NET.MainPage"
             BackgroundColor="{DynamicResource PrimaryColor}">
    <StackLayout Margin="0,0,0,0">
        <Image Source="datagrams_powered_logo.png" WidthRequest="296" HeightRequest="196" VerticalOptions="StartAndExpand" HorizontalOptions="EndAndExpand" Rotation="30" Margin="0,-50,-70, 0"/>
        <Image Source="school_logo.png" WidthRequest="254" HeightRequest="254" VerticalOptions="Center"/>
        <Label Text="TeleBufet"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               TextColor="White"
               FontSize="64"
               FontAutoScalingEnabled="True"
               FontAttributes="Bold"
               Margin="0,-40,0,0"
               ></Label>
        <Label Text="A bufet reservation system in .NET"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               TextColor="#c7dd89"
               FontSize="16"
               FontAutoScalingEnabled="True"
               FontAttributes="Bold"
               Margin="0,-15,0,0"
               ></Label>
        <BoxView
                x:Name="SlideOut"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="EndAndExpand"
                />
    </StackLayout>
</ContentPage>
