<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeleBufet.NET.MainPage"
             BackgroundColor="#87be56">
    <StackLayout
        x:Name="mainStackLayout"
        Margin="0,0,0,0">
        <Image 
            Source="datagrams_powered_logo.png"
            VerticalOptions="Start"
            WidthRequest="256"
            Rotation="30"
            TranslationX="45"
            TranslationY="15"
            HorizontalOptions="EndAndExpand"/>
        <Image Source="school_logo.png"
               WidthRequest="254"
               Margin="0,80,0,0"
               HeightRequest="254"/>
        <Label Text="TeleBufet"
               TextColor="White"
               FontSize="64"
               FontAutoScalingEnabled="True"
               HorizontalTextAlignment="Center"
               HorizontalOptions="Center"
               Margin="0,-50,0,-10"
               FontAttributes="Bold"/>
        <Label Text="Rezervacni system v .NET 6"
               HorizontalTextAlignment="Center"
               Margin="0,0,0,-10"
               HorizontalOptions="Center"
               TextColor="#c7dd89"
               FontSize="16"
               FontAutoScalingEnabled="True"
               FontAttributes="Bold"/>
    </StackLayout>
</ContentPage>
