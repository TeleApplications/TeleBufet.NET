<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeleBufet.NET.Pages.ProductPage.MainProductPage"
             Title="MainProductPage"
             BackgroundColor="#fdfdfd">
        <Frame BorderColor="LightGrey" CornerRadius="20"
               x:Name="defaultFrame">
     <ScrollView
        x:Name="scrollView">
            <FlexLayout
                Wrap="Wrap"
                Direction="Row"
                JustifyContent="SpaceEvenly"
                AlignContent="Center"
                AlignItems="Center"
                x:Name="collection">
            </FlexLayout>
     </ScrollView>
        </Frame>
</ContentPage>
