<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeleBufet.NET.Pages.ProductPage.MainProductPage"
             Title="MainProductPage"
             BackgroundColor="#fdfdfd">
    <StackLayout>
        <Frame BorderColor="LightGray" CornerRadius="40" HeightRequest="50">
            <ScrollView
                Orientation="Horizontal">
                <HorizontalStackLayout
                    x:Name="horizontalCollection">
                </HorizontalStackLayout>
            </ScrollView>
        </Frame>
        <Frame BorderColor="LightGrey" CornerRadius="20">
            <ScrollView
                x:Name="scrollView">
                    <FlexLayout
                        Wrap="Wrap"
                        Direction="Row"
                        JustifyContent="SpaceEvenly"
                        AlignContent="Center"
                        AlignItems="Center"
                        x:Name="collection">
                    </FlexLayout>
            </ScrollView>
        </Frame>
    </StackLayout>
</ContentPage>
