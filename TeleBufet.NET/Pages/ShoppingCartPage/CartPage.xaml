<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeleBufet.NET.Pages.ShoppingCartPage.CartPage"
             Title="CartPage"
             BackgroundColor="Transparent">
    <ContentPage.Content>
        <Frame 
            Margin="0,200,0,0"
            BackgroundColor="#fafafa"
            CornerRadius="35">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="150*"></RowDefinition>
                    <RowDefinition Height="35"></RowDefinition>
                    <RowDefinition Height="25"></RowDefinition>
                    <RowDefinition Height="125*"></RowDefinition>
                </Grid.RowDefinitions>
            <Label 
                Text="Order"
                Grid.Row="0"
                FontSize="28"
                TextColor="Black"
                HorizontalTextAlignment="Center"
                HorizontalOptions="Start">
            </Label>
            <ScrollView
                    Grid.Row="1">
                    <StackLayout
                    x:Name="orderLayout"
                    Grid.Row="1">
                </StackLayout>
            </ScrollView>
            <Frame
                x:Name="indicatorLayout"
                Grid.Row="3"
                HorizontalOptions="StartAndExpand"
                VerticalOptions="Center"
                BackgroundColor="Transparent">
            </Frame>
                <Frame
                    Grid.Row="4"
                    BackgroundColor="White"
                    CornerRadius="15">
                <VerticalStackLayout>
                    <HorizontalStackLayout
                        x:Name="breaksLayout"
                        HorizontalOptions="Center"
                        HeightRequest="60">
                    </HorizontalStackLayout>
                        <HorizontalStackLayout
                            Margin="0,0,0,15">
                            <Label 
                                Text="Order"
                                FontSize="16"
                                TextColor="Black"
                                HorizontalTextAlignment="Center"
                                HorizontalOptions="Start">
                            </Label>
                            <Label 
                                x:Name="finalPrice"
                                FontSize="16"
                                TextColor="Black"
                                FontAttributes="Bold"
                                HorizontalTextAlignment="Center"
                                HorizontalOptions="End">
                            </Label>
                        </HorizontalStackLayout>
                    <Button
                        x:Name="Reservate"
                        BackgroundColor="{DynamicResource PrimaryColor}"
                        Text="Reservate"
                        FontSize="18"
                        TextColor="White"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="EndAndExpand"
                        CornerRadius="30"
                        HeightRequest="65"
                        Clicked="ReservateProducts">
                    </Button>
                </VerticalStackLayout>
                </Frame>
            </Grid>
        </Frame>
    </ContentPage.Content>
</ContentPage>