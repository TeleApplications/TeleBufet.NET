<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeleBufet.NET.Pages.TicketPage.ReservationPage"
             Title="ReservationPage"
             BackgroundColor="Transparent">
    <ContentPage.Content>
        <Frame 
            Margin="0,100,0,0"
            BackgroundColor="White"
            CornerRadius="35">
            <ScrollView>
                <VerticalStackLayout
                    x:Name="ticketLayout">
                    <StackLayout
                        Margin="0,0,0,10"
                        Orientation="Horizontal">
                        <Label
                            Text="Upcoming reservations"
                            FontSize="14"
                            FontAttributes="Bold"
                            HorizontalOptions="Start">
                        </Label>
                        <Button
                            Text="History"
                            FontSize="12"
                            HeightRequest="10"
                            HorizontalOptions="End">
                        </Button>
                    </StackLayout>
                </VerticalStackLayout>
            </ScrollView>
        </Frame>
    </ContentPage.Content>
</ContentPage>